        <script type="text/javascript" src="JS/selectivizr.js"></script>
        <![endif]--><% }%>

    </head>


    <body>

        <header class="Page">
            <div class="Wrapper">
                {{> Navigation }}
            </div>
        </header>


        <main>
            <div class="Wrapper">
                {{> body }}
            </div>
        </main>

        <footer class="Page">
            <div class="Wrapper">
                {{> Footer }}
            </div>
        </footer>

        <script type="text/javascript" src="js/<%= _.slugify(websiteName) %>.min.js"></script>

    </body>
